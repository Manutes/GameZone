<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/remolachaHeroContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginVertical="@dimen/dimen_12"
    android:layout_marginHorizontal="@dimen/dimen_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@drawable/shape_custom_ranking"
        android:paddingHorizontal="@dimen/dimen_24">

        <TextView
            android:id="@+id/rankingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:fontFamily="@font/barcadenobar"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/primary_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        app:strokeWidth="@dimen/dimen_1"
        app:strokeColor="@color/gold">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/trofeo"
                android:layout_margin="@dimen/dimen_6"
                app:tint="@color/gold" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/gold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goldUsername"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    tools:text="khskuiussfsdfdsdfsdfsdfdsdffs"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/barcadenobar"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:textColor="@color/gold"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="24"/>

                <View
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="match_parent"
                    android:background="@color/gold"/>

                <TextView
                    android:id="@+id/goldPoints"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="wrap_content"
                    tools:text="05:26"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:fontFamily="@font/barcadenobar"
                    android:textColor="@color/gold"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2"
        app:strokeWidth="@dimen/dimen_1"
        app:strokeColor="@color/silver">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/trofeo"
                android:layout_margin="@dimen/dimen_6"
                app:tint="@color/silver" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/silver"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/silverUsername"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    tools:text="khskuiussfsdfdsdfsdfsdfdsdffs"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/barcadenobar"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:textColor="@color/silver"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="24"/>

                <View
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="match_parent"
                    android:background="@color/silver"/>

                <TextView
                    android:id="@+id/silverPoints"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="wrap_content"
                    tools:text="05:26"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:fontFamily="@font/barcadenobar"
                    android:textColor="@color/silver"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2"
        app:strokeWidth="@dimen/dimen_1"
        app:strokeColor="@color/bronze">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/trofeo"
                android:layout_margin="@dimen/dimen_6"
                app:tint="@color/bronze" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/bronze"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bronzeUsername"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    tools:text="khskuiussfsdfdsdfsdfsdfdsdffs"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/barcadenobar"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:textColor="@color/bronze"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="24"/>

                <View
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="match_parent"
                    android:background="@color/gold"/>

                <TextView
                    android:id="@+id/bronzePoints"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="wrap_content"
                    tools:text="05:26"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/dimen_6"
                    android:fontFamily="@font/barcadenobar"
                    android:textColor="@color/bronze"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>