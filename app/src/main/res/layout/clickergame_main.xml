<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_clicker_game"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_24">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/dimen_24">

            <ImageView
                android:id="@+id/imgIO"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/i_o"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgRedGreen"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/red_green"
                app:layout_constraintBottom_toBottomOf="@id/imgIO"
                app:layout_constraintStart_toEndOf="@id/imgIO"
                app:layout_constraintTop_toTopOf="@id/imgIO" />

            <TextView
                android:id="@+id/score_text_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/dimen_24"
                android:background="@drawable/score_bg"
                android:fontFamily="@font/fuentedigital"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dimen_12"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/imgRedGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRedGreen"
                app:layout_constraintTop_toTopOf="@id/imgIO"
                tools:text="Dinero: 0" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coinContainer"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/scoreContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="@dimen/dimen_24">

            <ImageView
                android:id="@+id/coinBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/coin_bg"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/click_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/fondo_uno"
                app:layout_constraintBottom_toBottomOf="@id/coinBg"
                app:layout_constraintEnd_toEndOf="@id/coinBg"
                app:layout_constraintStart_toStartOf="@id/coinBg"
                app:layout_constraintTop_toTopOf="@id/coinBg"
                android:paddingHorizontal="@dimen/dimen_28"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_28"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rounded_corner_bg"
            android:padding="@dimen/dimen_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coinContainer">

            <LinearLayout
                android:id="@+id/clickValueContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_value_img" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/click_value_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16"
                    app:backgroundTint="@color/purple_200"
                    app:cornerRadius="@dimen/dimen_28"
                    tools:text="@string/button_increase_click_value" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clickSpeedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clickValueContainer">

                <ImageView
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_speed_img" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/click_speed_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16"
                    app:backgroundTint="@color/purple_200"
                    app:cornerRadius="@dimen/dimen_28"
                    tools:text="@string/button_increase_click_speed" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/upgrade_pc"
            android:layout_width="245dp"
            android:layout_height="66dp"
            android:text="MEJORAR ORDENADOR"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>